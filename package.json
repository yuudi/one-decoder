{
  "name": "one-revealer",
  "version": "0.3.1",
  "private": true,
  "scripts": {
    "build": "ng build",
    "lint": "ng lint",
    "ng": "ng",
    "start": "ng serve ${REMOTE_CONTAINERS:+--host 0.0.0.0}",
    "watch": "ng build --watch --configuration development"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-packagejson"
    ],
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/cdk": "^20.0.4",
    "@angular/common": "^20.0.5",
    "@angular/compiler": "^20.0.5",
    "@angular/core": "^20.0.5",
    "@angular/forms": "^20.0.5",
    "@angular/material": "^20.0.4",
    "@angular/platform-browser": "^20.0.5",
    "@angular/router": "^20.0.5",
    "@angular/service-worker": "^20.0.5",
    "abracadabra-cn": "^3.1.10",
    "crypto-js": "^4.2.0",
    "hidden-watermark-wasm": "git+https://github.com/yuudi/one-revealer.git#hidden-watermark-wasm",
    "qrcode": "^1.5.4",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "whisperer-wasm": "git+https://github.com/yuudi/one-revealer.git#whisperer-wasm",
    "zero-width-lib": "^1.1.0"
  },
  "devDependencies": {
    "@angular/build": "^20.0.4",
    "@angular/cli": "^20.0.4",
    "@angular/compiler-cli": "^20.0.5",
    "@types/crypto-js": "^4.2.2",
    "@types/jasmine": "~5.1.8",
    "@types/qrcode": "^1.5.5",
    "angular-eslint": "20.1.1",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "npm-check-updates": "^18.0.1",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "8.35.0"
  }
}
